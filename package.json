{
    "name": "vivy",
    "author": "liangxiaojun",
    "version": "3.2.0",
    "description": "A state container for JavaScript apps based on Redux",
    "main": "lib/index.js",
    "module": "es/index.js",
    "types": "es/index.d.ts",
    "files": [
        "lib",
        "es",
        "src",
        "LICENSE",
        "README.md"
    ],
    "scripts": {
        "clean": "rimraf lib es",
        "test": "cross-env NODE_ENV=test jest test/**.test.js",
        "build:commonjs": "tsc --module commonjs --declaration false --outDir lib",
        "build:es": "tsc --module esnext --declaration true --outDir es",
        "build": "npm run clean && npm run build:commonjs && npm run build:es",
        "do-publish": "npm run build && npm publish"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/fatalxiao/vivy"
    },
    "keywords": [
        "react",
        "redux",
        "state-management"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/fatalxiao/vivy/issues"
    },
    "dependencies": {
        "redux": ">=4.x"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.36.0",
        "eslint-plugin-jest": "^27.2.1",
        "jest": "^29.5.0",
        "rimraf": "^4.4.0",
        "typescript": "^4.9.5"
    }
}
